{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2020",
        "outDir": "dist",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "strictNullChecks": false,
        "skipLibCheck": true,
        "sourceMap": true
    },
    "include": ["src/**/*"]
}
